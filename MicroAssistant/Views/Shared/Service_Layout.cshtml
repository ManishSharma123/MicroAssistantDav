<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>::Micro Assistant::</title>



    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link rel="icon" type="/image/ico" href="~/images/BAF-favicon1.ico" />
    <!-- Add custom CSS here -->
    <link href="~/Content/modern-business.css" rel="stylesheet">
    <link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet">
</head>

<body>

    <!-- /.section -->
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="clear" style="height:20px;"></div>
                    <img class="img-responsive_new" src="~/images/logo2.png" alt="">

                </div>

                <div class="col-lg-6">
                    <div class="get_text1 text-right">
                        <div class="clear" style="height:40px;"></div>
                        @if (Request.IsAuthenticated)
                        {
                            <a href="~/Account/LogOff">Logout</a>
                        }
                        else
                        {
                            <a href="~/Account/SignUp">Sign Up</a>
                            <a href="~/Account/Login">Log In</a>
                        }
                    </div>
                </div>
                <div class="clear" style="height:20px;"></div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </div>
    <div id="body">
        @RenderBody()
    </div>
    <!-- /.section -->
    @Html.Partial("_FooterLayout")
</body>
</html>
